---
import { getTranslation } from '../../i18n/translations';

const locale = Astro.currentLocale || 'en';
const t = getTranslation(locale);

const testimonials = [
  {
    quote: "Raze transformed our sales process. We went from 20 demos a month to over 100. The AI agents are incredibly effective at qualifying leads.",
    author: "Sarah Chen",
    role: "VP of Sales",
    company: "TechFlow Inc.",
    rating: 5,
    avatar: "SC"
  },
  {
    quote: "The LinkedIn automation saved our team countless hours. Now we focus on closing deals instead of sending connection requests.",
    author: "Marcus Johnson",
    role: "Sales Director",
    company: "GrowthMetrics",
    rating: 5,
    avatar: "MJ"
  },
  {
    quote: "Best investment we made this year. ROI was positive within the first month. The personalization features are game-changing.",
    author: "Elena Rodriguez",
    role: "Head of Growth",
    company: "ScaleUp.io",
    rating: 5,
    avatar: "ER"
  }
];

const stats = [
  { value: '10,000+', key: 'leads' },
  { value: '500+', key: 'customers' },
  { value: '4.9/5', key: 'rating' },
  { value: '99.9%', key: 'uptime' }
];
---

<section id="testimonials" class="py-20 lg:py-32 bg-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Stats Bar -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-20 pb-20 border-b border-gray-800">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{stat.value}</div>
          <div class="text-gray-400 text-sm">{t.testimonials.stats[stat.key]}</div>
        </div>
      ))}
    </div>

    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-primary-400 font-semibold text-sm uppercase tracking-wider">{t.testimonials.badge}</span>
      <h2 class="text-3xl sm:text-4xl font-bold text-white mt-3 mb-4">
        {t.testimonials.title}
      </h2>
      <p class="text-lg text-gray-400">
        {t.testimonials.subtitle}
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-dark-50 rounded-2xl p-8 border border-gray-800 hover:border-primary-500/50 transition-colors">
          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {Array.from({ length: testimonial.rating }).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-300 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-sm">
              {testimonial.avatar}
            </div>
            <div>
              <div class="font-semibold text-white">{testimonial.author}</div>
              <div class="text-sm text-gray-400">{testimonial.role} at {testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
