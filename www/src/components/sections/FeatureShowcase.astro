---
import { getTranslation } from '../../i18n/translations';

const locale = Astro.currentLocale || 'en';
const t = getTranslation(locale);
---

<section class="py-20 lg:py-32 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Main Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-semibold text-gray-900 mb-4">
        {t.featureShowcase?.mainTitle || 'One Platform.'} {t.featureShowcase?.mainTitlePart2 || 'Every Channel.'}
        <br />
        <span class="text-transparent bg-clip-text" style="background-image: linear-gradient(to right, #7229f7, #894cf8, #a06ff9);">{t.featureShowcase?.mainTitleHighlight || 'Zero Manual Work.'}</span>
      </h2>
      <p class="text-lg text-gray-600">
        {t.featureShowcase?.mainSubtitle || 'Empower your sales team with tools that automate, personalize, and accelerate prospecting. All under one unified CRM.'}
      </p>
    </div>

    <!-- Two Large Feature Cards -->
    <div class="grid lg:grid-cols-2 gap-8 mb-16">
      <!-- Card: Smart Campaign Management -->
      <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-sm">
        <h3 class="text-2xl font-semibold text-gray-900 mb-3">{t.featureShowcase?.bigCard1Title || 'Smart Campaign Management'}</h3>
        <p class="text-gray-600 mb-8">{t.featureShowcase?.bigCard1Description || 'Create, launch, and manage multi-step campaigns with precision. Target the right prospects with personalized sequences.'}</p>

        <!-- Mockup: Connected Channels to Pipeline -->
        <div class="bg-gray-50 rounded-xl p-4">
          <!-- Channel Sources -->
          <div class="flex items-center justify-between mb-4">
            <span class="text-xs font-medium text-gray-500">Connected Channels</span>
            <span class="text-xs text-green-600 font-medium">All synced</span>
          </div>

          <div class="grid grid-cols-2 gap-3 mb-4">
            <!-- LinkedIn -->
            <div class="bg-white rounded-lg p-3 shadow-sm border border-gray-100 flex items-center gap-3">
              <div class="w-8 h-8 bg-[#0A66C2] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-900">LinkedIn</p>
                <p class="text-xs text-green-600">+47 leads today</p>
              </div>
            </div>

            <!-- Google Maps -->
            <div class="bg-white rounded-lg p-3 shadow-sm border border-gray-100 flex items-center gap-3">
              <div class="w-8 h-8 bg-[#34A853] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-900">Google Maps</p>
                <p class="text-xs text-green-600">+89 leads today</p>
              </div>
            </div>

            <!-- Email -->
            <div class="bg-white rounded-lg p-3 shadow-sm border border-gray-100 flex items-center gap-3">
              <div class="w-8 h-8 bg-[#EA4335] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 010 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-900">Email</p>
                <p class="text-xs text-green-600">+23 replies today</p>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="bg-white rounded-lg p-3 shadow-sm border border-gray-100 flex items-center gap-3">
              <div class="w-8 h-8 bg-[#25D366] rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-900">WhatsApp</p>
                <p class="text-xs text-green-600">+15 chats today</p>
              </div>
            </div>
          </div>

          <!-- Arrow to Pipeline -->
          <div class="flex justify-center my-3">
            <svg class="w-6 h-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </div>

          <!-- Pipeline Summary -->
          <div class="bg-white rounded-lg p-4 shadow-sm border border-primary-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-xs text-gray-500 mb-1">Today's Pipeline</p>
                <p class="text-2xl font-bold text-gray-900">174 <span class="text-sm font-normal text-green-600">new leads</span></p>
              </div>
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card: Track Your Success -->
      <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-sm">
        <h3 class="text-2xl font-semibold text-gray-900 mb-3">{t.featureShowcase?.bigCard2Title || 'Track Your Success'}</h3>
        <p class="text-gray-600 mb-8">{t.featureShowcase?.bigCard2Description || 'Get detailed insights on campaign performance, team productivity, and conversion rates with beautiful reports.'}</p>

        <!-- Mockup: Analytics Chart -->
        <div class="bg-gray-50 rounded-xl p-4">
          <!-- Floating Badge -->
          <div class="flex justify-end mb-4">
            <div class="bg-primary-500 text-white text-xs font-medium px-3 py-1.5 rounded-full shadow-lg">
              1,200+ Leads this month
            </div>
          </div>

          <!-- Chart Area -->
          <div class="relative h-32 mb-6">
            <svg class="w-full h-full" viewBox="0 0 400 120" preserveAspectRatio="none">
              <defs>
                <linearGradient id="chartGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" stop-color="rgba(114, 41, 247, 0.3)" />
                  <stop offset="100%" stop-color="rgba(114, 41, 247, 0)" />
                </linearGradient>
              </defs>
              <!-- Area fill -->
              <path
                d="M0,100 Q50,90 100,70 T200,50 T300,30 T400,40 L400,120 L0,120 Z"
                fill="url(#chartGradient)"
              />
              <!-- Line -->
              <path
                d="M0,100 Q50,90 100,70 T200,50 T300,30 T400,40"
                fill="none"
                stroke="#7229f7"
                stroke-width="3"
                stroke-linecap="round"
              />
              <!-- Data point -->
              <circle cx="300" cy="30" r="6" fill="#7229f7" stroke="white" stroke-width="2" />
            </svg>
          </div>

          <!-- Stats Row -->
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <p class="text-2xl font-bold text-gray-900">95%</p>
              <p class="text-xs text-gray-500">Delivery Rate</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">42%</p>
              <p class="text-xs text-gray-500">Open Rate</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">18%</p>
              <p class="text-xs text-gray-500">Reply Rate</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom 3 Feature Cards -->
    <div class="grid md:grid-cols-3 gap-6">
      <!-- Card 1: Multi-channel Outreach -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.featureShowcase?.card1Title || 'Multi-channel Outreach'}</h3>
        <p class="text-gray-600 text-sm mb-6">{t.featureShowcase?.card1Description || 'Connect with prospects through LinkedIn, email, and more. All from one unified platform.'}</p>

        <!-- Mockup: Channel Icons -->
        <div class="bg-gray-50 rounded-xl p-4">
          <div class="flex justify-center gap-3 mb-4">
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center border-2 border-primary-500">
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </div>
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
            </div>
            <div class="w-10 h-10 bg-white rounded-lg shadow-sm flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </div>
          </div>

          <!-- Connected Channels List -->
          <div class="space-y-2">
            <div class="flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-[#0A66C2]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">LinkedIn</p>
                <p class="text-xs text-gray-500">3 accounts connected</p>
              </div>
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            </div>
            <div class="flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm">
              <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-[#EA4335]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 010 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Email</p>
                <p class="text-xs text-gray-500">2 inboxes synced</p>
              </div>
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Card 2: AI Conversations -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.featureShowcase?.card2Title || 'AI Conversations'}</h3>
        <p class="text-gray-600 text-sm mb-6">{t.featureShowcase?.card2Description || 'Let AI agents handle initial conversations, qualify leads, and book meetings for you.'}</p>

        <!-- Mockup: Chat Interface -->
        <div class="bg-gray-50 rounded-xl p-4">
          <div class="text-xs font-medium text-gray-500 mb-3">Recent Activity</div>
          <p class="text-xs text-gray-600 mb-3">You have <span class="text-primary-600 font-medium">12 new replies</span> today.</p>

          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-xs text-gray-900"><span class="font-medium">AI Agent</span> qualified lead from TechCorp</p>
                <p class="text-xs text-gray-400">2 min ago</p>
              </div>
            </div>
            <div class="flex items-start gap-2">
              <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-xs text-gray-900"><span class="font-medium">Meeting booked</span> with Sarah from StartupXYZ</p>
                <p class="text-xs text-gray-400">15 min ago</p>
              </div>
            </div>
            <div class="flex items-start gap-2">
              <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-xs text-gray-900"><span class="font-medium">New reply</span> from Marcus at GrowthCo</p>
                <p class="text-xs text-gray-400">1 hour ago</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card 3: Track Performance -->
      <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{t.featureShowcase?.card3Title || 'Track Performance'}</h3>
        <p class="text-gray-600 text-sm mb-6">{t.featureShowcase?.card3Description || 'Monitor your outreach campaigns with detailed analytics and conversion tracking.'}</p>

        <!-- Mockup: Progress Bars -->
        <div class="bg-gray-50 rounded-xl p-4">
          <div class="text-xs font-medium text-gray-700 mb-4">Campaign Progress</div>
          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-xs mb-1">
                <span class="text-gray-600">Connection Requests</span>
                <span class="text-gray-900 font-medium">847/1000</span>
              </div>
              <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full bg-green-500 rounded-full" style="width: 84.7%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-xs mb-1">
                <span class="text-gray-600">Messages Sent</span>
                <span class="text-gray-900 font-medium">523/700</span>
              </div>
              <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full bg-blue-500 rounded-full" style="width: 74.7%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-xs mb-1">
                <span class="text-gray-600">Replies Received</span>
                <span class="text-gray-900 font-medium">89/200</span>
              </div>
              <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full bg-purple-500 rounded-full" style="width: 44.5%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-xs mb-1">
                <span class="text-gray-600">Meetings Booked</span>
                <span class="text-gray-900 font-medium">24/50</span>
              </div>
              <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full bg-orange-500 rounded-full" style="width: 48%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
