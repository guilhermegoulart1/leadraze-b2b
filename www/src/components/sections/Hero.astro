  <div class="absolute bottom-20 right-10 w-72 h-72 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-float" style="animation-delay: 2s;"></div>

  <!-- Floating Icons with Connection Lines -->
  <div class="hidden lg:block" id="floating-icons-container">
    <!-- LinkedIn - Top Left -->
