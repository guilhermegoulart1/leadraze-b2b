    <div class="floating-icon absolute top-[38%] right-[16%] w-11 h-11 bg-white rounded-xl flex items-center justify-center shadow-lg animate-float rotate-[-6deg] z-10" style="animation-delay: 1.5s;" data-icon="maps">
      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none">
        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z" fill="#EA4335"/>
        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z" fill="url(#maps-gradient)"/>
        <circle cx="12" cy="9" r="2.5" fill="#B41412"/>
        <defs>
          <linearGradient id="maps-gradient" x1="5" y1="2" x2="19" y2="22" gradientUnits="userSpaceOnUse">
            <stop offset="0%" stop-color="#EA4335"/>
            <stop offset="33%" stop-color="#FBBC04"/>
            <stop offset="66%" stop-color="#34A853"/>
            <stop offset="100%" stop-color="#4285F4"/>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- Instagram - Left -->
    <div class="floating-icon absolute top-[24%] left-[20%] w-10 h-10 bg-pink-100 rounded-xl flex items-center justify-center shadow-lg animate-float rotate-[15deg] z-10" style="animation-delay: 2s;" data-icon="instagram">
      <svg class="w-5 h-5 text-[#E4405F]" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
      </svg>
    </div>

    <!-- SVG Connection Lines Container -->
    <svg id="connection-lines" class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 5;">
      <defs>
        <filter id="soft-glow" x="-50%" y="-50%" width="200%" height="200%">
          <feGaussianBlur stdDeviation="2" result="blur"/>
          <feMerge>
            <feMergeNode in="blur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>
      </defs>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto relative">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-emerald-100 text-emerald-700 px-4 py-1.5 rounded-full text-sm font-semibold mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
        </span>
        {t.hero.badge}
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-semibold text-gray-900 tracking-tight mb-6">
        {t.hero.title}
        <span class="text-transparent bg-clip-text" style="background-image: linear-gradient(to right, #7229f7, #894cf8, #a06ff9);">
          {t.hero.titleHighlight}
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
        {t.hero.subtitle}
      </p>

    </div>

    <!-- Dashboard Preview -->
    <div class="mt-24 relative z-20" id="dashboard-preview">
      <div class="relative rounded-2xl shadow-2xl shadow-gray-900/10 overflow-hidden border border-gray-200/50 bg-white">
        <!-- Browser Chrome -->
        <div class="bg-gray-100 px-4 py-3 flex items-center gap-2 border-b border-gray-200">
          <div class="flex gap-1.5">
            <div class="w-3 h-3 rounded-full bg-red-400"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
            <div class="w-3 h-3 rounded-full bg-green-400"></div>
          </div>
          <div class="flex-1 flex justify-center">
            <div class="bg-white rounded-md px-4 py-1 text-sm text-gray-500 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              app.getraze.co
            </div>
          </div>
        </div>

        <!-- Dashboard Content Image -->
        <img src="/dash_preview.png" alt="Dashboard Preview" class="w-full" />
      </div>

      <!-- Floating Stats Cards -->
      <div class="absolute -left-4 top-1/2 -translate-y-1/2 hidden lg:block">
        <div class="bg-white rounded-xl shadow-xl p-4 border border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">+340%</p>
              <p class="text-sm text-gray-500">Lead Response Rate</p>
            </div>
          </div>
        </div>
      </div>

      <div class="absolute -right-4 top-1/3 hidden lg:block">
        <div class="bg-white rounded-xl shadow-xl p-4 border border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900">10K+</p>
              <p class="text-sm text-gray-500">Leads Generated</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function initConnectionLines() {
    const svg = document.getElementById('connection-lines');
    const dashboard = document.getElementById('dashboard-preview');
    const icons = document.querySelectorAll('.floating-icon');

    if (!svg || !dashboard || icons.length === 0) return;

    // Clear existing paths
    while (svg.firstChild) {
      if (svg.firstChild.nodeName !== 'defs') {
        svg.removeChild(svg.firstChild);
      } else {
        break;
      }
    }

    // Get dashboard center position
    const dashboardRect = dashboard.getBoundingClientRect();
    const svgRect = svg.getBoundingClientRect();

    const centerX = dashboardRect.left + dashboardRect.width / 2 - svgRect.left;
    const centerY = dashboardRect.top + 60 - svgRect.top; // Top of dashboard

    icons.forEach((icon, index) => {
      const iconRect = icon.getBoundingClientRect();
      const startX = iconRect.left + iconRect.width / 2 - svgRect.left;
      const startY = iconRect.top + iconRect.height / 2 - svgRect.top;

      // Create curved path
      const isLeft = startX < centerX;
      const controlX1 = isLeft ? startX + (centerX - startX) * 0.3 : startX - (startX - centerX) * 0.3;
      const controlY1 = startY + (centerY - startY) * 0.2;
      const controlX2 = isLeft ? centerX - (centerX - startX) * 0.2 : centerX + (startX - centerX) * 0.2;
      const controlY2 = centerY - (centerY - startY) * 0.3;

      const pathD = `M ${startX} ${startY} C ${controlX1} ${controlY1}, ${controlX2} ${controlY2}, ${centerX} ${centerY}`;

      // Create the path element
      const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path.setAttribute('d', pathD);
      path.setAttribute('fill', 'none');
      path.setAttribute('stroke', 'rgba(114, 41, 247, 0.18)');
      path.setAttribute('stroke-width', '1');
      path.setAttribute('stroke-dasharray', '4 6');
      path.setAttribute('class', 'connection-path');
      path.id = `path-${index}`;

      svg.appendChild(path);

      // Create traveling dot (ellipse for softer look)
      const ellipse = document.createElementNS('http://www.w3.org/2000/svg', 'ellipse');
      ellipse.setAttribute('rx', '3');
      ellipse.setAttribute('ry', '2');
      ellipse.setAttribute('fill', 'rgba(137, 76, 248, 0.7)');
      ellipse.setAttribute('filter', 'url(#soft-glow)');
      ellipse.setAttribute('class', 'traveling-ellipse');

      // Animate the ellipse along the path
      const animateMotion = document.createElementNS('http://www.w3.org/2000/svg', 'animateMotion');
      animateMotion.setAttribute('dur', `${3 + index * 0.5}s`);
      animateMotion.setAttribute('repeatCount', 'indefinite');
      animateMotion.setAttribute('rotate', 'auto');

      const mpath = document.createElementNS('http://www.w3.org/2000/svg', 'mpath');
      mpath.setAttributeNS('http://www.w3.org/1999/xlink', 'href', `#path-${index}`);

      animateMotion.appendChild(mpath);
      ellipse.appendChild(animateMotion);
      svg.appendChild(ellipse);
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initConnectionLines, 100);
    });
  } else {
    setTimeout(initConnectionLines, 100);
  }

  // Reinitialize on resize
  let resizeTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(initConnectionLines, 200);
  });
</script>

<style>
  .connection-path {
    animation: dashMove 20s linear infinite;
  }

  @keyframes dashMove {
    0% {
      stroke-dashoffset: 0;
    }
    100% {
      stroke-dashoffset: -100;
    }
  }

  .traveling-ellipse {
    opacity: 0.7;
  }
</style>
