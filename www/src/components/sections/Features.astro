---
import { getTranslation } from '../../i18n/translations';

const locale = Astro.currentLocale || 'en';
const t = getTranslation(locale);

const features = [
  { icon: 'linkedin', key: 'linkedin' },
  { icon: 'maps', key: 'maps' },
  { icon: 'warmup', key: 'warmup' },
  { icon: 'aiAgents', key: 'aiAgents' },
  { icon: 'multiUser', key: 'multiUser' },
  { icon: 'pipeline', key: 'pipeline' }
];

const getIconSvg = (icon: string) => {
  const icons = {
    linkedin: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
    maps: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />',
    warmup: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />',
    aiAgents: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />',
    multiUser: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />',
    pipeline: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />'
  };
  return icons[icon] || icons.aiAgents;
};
---

<section id="features" class="py-20 lg:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">{t.features.badge}</span>
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mt-3 mb-4">
        {t.features.title}
      </h2>
      <p class="text-lg text-gray-600">
        {t.features.subtitle}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => {
        const featureData = t.features[feature.key];
        return (
          <div class="p-6 rounded-2xl border border-gray-200 bg-white hover:shadow-md transition-shadow duration-300">
            <div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center mb-5">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={getIconSvg(feature.icon)} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{featureData.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{featureData.description}</p>
          </div>
        );
      })}
    </div>
  </div>
</section>
