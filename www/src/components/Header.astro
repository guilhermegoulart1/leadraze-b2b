---
import { getTranslation } from '../i18n/translations';

const currentLocale = Astro.currentLocale || 'en';
const t = getTranslation(currentLocale);

// Helper to get localized path
const getLocalizedPath = (path: string) => {
  if (currentLocale === 'en') return path;
  return `/${currentLocale}${path}`;
};

// Get base URL for anchor links (homepage)
const homeUrl = currentLocale === 'en' ? '/' : `/${currentLocale}/`;

// Product dropdown items
const productItems = [
  {
    href: `${homeUrl}#features`,
    label: t.nav.features,
    description: t.nav.featuresDesc,
    icon: 'features'
  },
  {
    href: `${homeUrl}#benefits`,
    label: t.nav.benefits,
    description: t.nav.benefitsDesc,
    icon: 'benefits'
  },
  {
    href: `${homeUrl}#testimonials`,
    label: t.nav.testimonials,
    description: t.nav.testimonialsDesc,
    icon: 'testimonials'
  }
];

// Solutions dropdown items
const solutionsItems = [
  {
    href: getLocalizedPath('/solutions/technical-support'),
    label: t.nav.solutionsTechSupport,
    description: t.nav.solutionsTechSupportDesc,
    icon: 'headset'
  },
  {
    href: getLocalizedPath('/solutions/dealerships'),
    label: t.nav.solutionsDealerships,
    description: t.nav.solutionsDealershipsDesc,
    icon: 'car'
  }
];

// Simple nav items (no dropdown)
const navItems = [
  { href: `${homeUrl}#pricing`, label: t.nav.pricing },
  { href: getLocalizedPath('/partners'), label: 'Partners' },
  { href: 'https://developer.getraze.co', label: t.nav.documentation, external: true },
];

const languages = [
  { code: 'en', href: '/', label: 'English', flagUrl: 'https://flagcdn.com/w40/us.png' },
  { code: 'pt-br', href: '/pt-br/', label: 'Português', flagUrl: 'https://flagcdn.com/w40/br.png' },
  { code: 'es', href: '/es/', label: 'Español', flagUrl: 'https://flagcdn.com/w40/es.png' },
];

const currentLang = languages.find(l => l.code === currentLocale) || languages[0];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={homeUrl} class="flex items-center">
        <img src="/logo_getraze.png" alt="GetRaze" class="h-8" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <!-- Product Dropdown -->
        <div class="relative" id="product-dropdown">
          <button
            id="product-btn"
            class="flex items-center gap-1 text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
            aria-label="Product menu"
          >
            {t.nav.product}
            <svg class="w-4 h-4 transition-transform duration-200" id="product-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div
            id="product-menu"
            class="hidden absolute left-1/2 -translate-x-1/2 top-full mt-3 bg-white rounded-xl shadow-xl border border-gray-100 py-3 min-w-[300px] z-50"
          >
            <div class="px-3 pb-2 mb-2 border-b border-gray-100">
              <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">{t.nav.product}</span>
            </div>
            {productItems.map((item) => (
              <a
                href={item.href}
                class="flex items-start gap-3 px-4 py-3 hover:bg-gray-50 transition-colors group"
              >
                <div class="w-10 h-10 rounded-lg bg-primary-50 flex items-center justify-center flex-shrink-0 group-hover:bg-primary-100 transition-colors">
                  {item.icon === 'features' && (
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  )}
                  {item.icon === 'benefits' && (
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {item.icon === 'testimonials' && (
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  )}
                </div>
                <div>
                  <span class="block text-sm font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">{item.label}</span>
                  <span class="block text-xs text-gray-500 mt-0.5">{item.description}</span>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Solutions Dropdown -->
        <div class="relative" id="solutions-dropdown">
          <button
            id="solutions-btn"
            class="flex items-center gap-1 text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
            aria-label="Solutions menu"
          >
            {t.nav.solutions}
            <svg class="w-4 h-4 transition-transform duration-200" id="solutions-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div
            id="solutions-menu"
            class="hidden absolute left-1/2 -translate-x-1/2 top-full mt-3 bg-white rounded-xl shadow-xl border border-gray-100 py-3 min-w-[320px] z-50"
          >
            <div class="px-3 pb-2 mb-2 border-b border-gray-100">
              <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">{t.nav.solutions}</span>
            </div>
            {solutionsItems.map((item) => (
              <a
                href={item.href}
                class="flex items-start gap-3 px-4 py-3 hover:bg-gray-50 transition-colors group"
              >
                <div class="w-10 h-10 rounded-lg bg-primary-50 flex items-center justify-center flex-shrink-0 group-hover:bg-primary-100 transition-colors">
                  {item.icon === 'headset' ? (
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  ) : (
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                    </svg>
                  )}
                </div>
                <div>
                  <span class="block text-sm font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">{item.label}</span>
                  <span class="block text-xs text-gray-500 mt-0.5">{item.description}</span>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Simple Nav Items -->
        {navItems.map((item) => (
          <a
            href={item.href}
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
            class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right side: Language Dropdown + Login -->
      <div class="hidden md:flex items-center gap-3">
        <!-- Language Dropdown -->
        <div class="relative" id="lang-dropdown">
          <button
            id="lang-btn"
            class="flex items-center gap-1 px-2 py-1.5 rounded-lg hover:bg-gray-100 transition-colors"
            aria-label="Select language"
          >
            <img src={currentLang.flagUrl} alt={currentLang.label} class="w-6 h-4 object-cover rounded-sm" />
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div
            id="lang-menu"
            class="hidden absolute right-0 top-full mt-1 bg-white rounded-lg shadow-lg border border-gray-100 py-1 min-w-[160px]"
          >
            {languages.map((lang) => (
              <a
                href={lang.href}
                class={`flex items-center gap-3 px-3 py-2 hover:bg-gray-50 transition-colors ${currentLocale === lang.code ? 'bg-gray-50' : ''}`}
              >
                <img src={lang.flagUrl} alt={lang.label} class="w-6 h-4 object-cover rounded-sm" />
                <span class="text-sm text-gray-700">{lang.label}</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Talk to Sales Button -->
        <button
          id="talk-to-sales-btn"
          class="border-2 border-primary-600 text-primary-600 px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-50 transition-colors"
        >
          {t.nav.talkToSales}
        </button>

        <!-- Login Button -->
        <a
          href="https://app.getraze.co"
          class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors"
        >
          {t.nav.login}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-4 pt-4 border-t border-gray-100">
        <!-- Product Accordion Mobile -->
        <div class="border-b border-gray-100 pb-4">
          <button
            id="product-btn-mobile"
            class="flex items-center justify-between w-full text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
          >
            <span>{t.nav.product}</span>
            <svg class="w-4 h-4 transition-transform duration-200" id="product-chevron-mobile" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="product-menu-mobile" class="hidden mt-3 pl-4 flex flex-col gap-3">
            {productItems.map((item) => (
              <a
                href={item.href}
                class="flex items-center gap-3 text-sm text-gray-600 hover:text-primary-600 transition-colors"
              >
                <div class="w-8 h-8 rounded-lg bg-primary-50 flex items-center justify-center flex-shrink-0">
                  {item.icon === 'features' && (
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  )}
                  {item.icon === 'benefits' && (
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {item.icon === 'testimonials' && (
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  )}
                </div>
                <div>
                  <span class="block font-medium">{item.label}</span>
                  <span class="block text-xs text-gray-400">{item.description}</span>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Solutions Accordion Mobile -->
        <div class="border-b border-gray-100 pb-4">
          <button
            id="solutions-btn-mobile"
            class="flex items-center justify-between w-full text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
          >
            <span>{t.nav.solutions}</span>
            <svg class="w-4 h-4 transition-transform duration-200" id="solutions-chevron-mobile" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="solutions-menu-mobile" class="hidden mt-3 pl-4 flex flex-col gap-3">
            {solutionsItems.map((item) => (
              <a
                href={item.href}
                class="flex items-center gap-3 text-sm text-gray-600 hover:text-primary-600 transition-colors"
              >
                <div class="w-8 h-8 rounded-lg bg-primary-50 flex items-center justify-center flex-shrink-0">
                  {item.icon === 'headset' ? (
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  ) : (
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                    </svg>
                  )}
                </div>
                <div>
                  <span class="block font-medium">{item.label}</span>
                  <span class="block text-xs text-gray-400">{item.description}</span>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Simple Nav Items Mobile -->
        {navItems.map((item) => (
          <a
            href={item.href}
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
            class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors"
          >
            {item.label}
          </a>
        ))}

        <div class="flex flex-col gap-3 pt-4 border-t border-gray-100">
          <!-- Language Selector Mobile -->
          <div class="flex items-center justify-center gap-3">
            {languages.map((lang) => (
              <a
                href={lang.href}
                class={`flex items-center gap-1 px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors ${currentLocale === lang.code ? 'bg-gray-100 ring-2 ring-primary-500' : ''}`}
                title={lang.label}
              >
                <img src={lang.flagUrl} alt={lang.label} class="w-8 h-5 object-cover rounded-sm" />
              </a>
            ))}
          </div>
          <button
            id="talk-to-sales-btn-mobile"
            class="border-2 border-primary-600 text-primary-600 px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-50 transition-colors text-center"
          >
            {t.nav.talkToSales}
          </button>
          <a
            href="https://app.getraze.co"
            class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors text-center"
          >
            {t.nav.login}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const langBtn = document.getElementById('lang-btn');
  const langMenu = document.getElementById('lang-menu');

  // Product dropdown elements
  const productBtn = document.getElementById('product-btn');
  const productMenu = document.getElementById('product-menu');
  const productChevron = document.getElementById('product-chevron');
  const productBtnMobile = document.getElementById('product-btn-mobile');
  const productMenuMobile = document.getElementById('product-menu-mobile');
  const productChevronMobile = document.getElementById('product-chevron-mobile');

  // Solutions dropdown elements
  const solutionsBtn = document.getElementById('solutions-btn');
  const solutionsMenu = document.getElementById('solutions-menu');
  const solutionsChevron = document.getElementById('solutions-chevron');
  const solutionsBtnMobile = document.getElementById('solutions-btn-mobile');
  const solutionsMenuMobile = document.getElementById('solutions-menu-mobile');
  const solutionsChevronMobile = document.getElementById('solutions-chevron-mobile');

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Language dropdown toggle
  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    langMenu?.classList.toggle('hidden');
  });

  // Product dropdown toggle (desktop)
  productBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    productMenu?.classList.toggle('hidden');
    productChevron?.classList.toggle('rotate-180');
    // Close solutions if open
    solutionsMenu?.classList.add('hidden');
    solutionsChevron?.classList.remove('rotate-180');
  });

  // Product dropdown toggle (mobile)
  productBtnMobile?.addEventListener('click', (e) => {
    e.stopPropagation();
    productMenuMobile?.classList.toggle('hidden');
    productChevronMobile?.classList.toggle('rotate-180');
  });

  // Solutions dropdown toggle (desktop)
  solutionsBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    solutionsMenu?.classList.toggle('hidden');
    solutionsChevron?.classList.toggle('rotate-180');
    // Close product if open
    productMenu?.classList.add('hidden');
    productChevron?.classList.remove('rotate-180');
  });

  // Solutions dropdown toggle (mobile)
  solutionsBtnMobile?.addEventListener('click', (e) => {
    e.stopPropagation();
    solutionsMenuMobile?.classList.toggle('hidden');
    solutionsChevronMobile?.classList.toggle('rotate-180');
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    const langDropdown = document.getElementById('lang-dropdown');
    const productDropdown = document.getElementById('product-dropdown');
    const solutionsDropdown = document.getElementById('solutions-dropdown');

    if (langDropdown && !langDropdown.contains(e.target as Node)) {
      langMenu?.classList.add('hidden');
    }

    if (productDropdown && !productDropdown.contains(e.target as Node)) {
      productMenu?.classList.add('hidden');
      productChevron?.classList.remove('rotate-180');
    }

    if (solutionsDropdown && !solutionsDropdown.contains(e.target as Node)) {
      solutionsMenu?.classList.add('hidden');
      solutionsChevron?.classList.remove('rotate-180');
    }
  });

  // Close dropdowns when clicking a link
  productMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      productMenu?.classList.add('hidden');
      productChevron?.classList.remove('rotate-180');
    });
  });

  solutionsMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      solutionsMenu?.classList.add('hidden');
      solutionsChevron?.classList.remove('rotate-180');
    });
  });

  // Talk to Sales button - dispatch custom event
  const talkToSalesBtn = document.getElementById('talk-to-sales-btn');
  const talkToSalesBtnMobile = document.getElementById('talk-to-sales-btn-mobile');

  const openSalesChat = () => {
    window.dispatchEvent(new CustomEvent('openSalesChat'));
    mobileMenu?.classList.add('hidden');
  };

  talkToSalesBtn?.addEventListener('click', openSalesChat);
  talkToSalesBtnMobile?.addEventListener('click', openSalesChat);
</script>
