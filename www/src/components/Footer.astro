---
import { getTranslation } from '../i18n/translations';

const locale = Astro.currentLocale || 'en';
const t = getTranslation(locale);
const localePath = locale === 'en' ? '' : `/${locale}`;
---

<footer class="bg-gradient-to-br from-primary-700 via-primary-600 to-primary-800 text-white">
  <!-- Main Footer -->
  <div class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-16">
        <!-- Brand -->
        <div class="col-span-2 md:col-span-1">
          <a href={localePath || "/"} class="inline-block mb-4">
            <img src="/logo/getraze-white.svg" alt="GetRaze" class="h-8" />
          </a>
          <p class="text-sm text-white/70 mb-6">
            {t.footer.description}
          </p>
          <!-- Social Links -->
          <div class="flex gap-4">
            <a href="https://www.linkedin.com/company/getraze" target="_blank" class="text-white/60 hover:text-white transition-colors" aria-label="LinkedIn">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a href="https://www.instagram.com/getrazeglobal/" target="_blank" class="text-white/60 hover:text-white transition-colors" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Product -->
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t.footer.product}</h3>
          <ul class="space-y-3">
            <li><a href="#features" class="text-sm text-white/70 hover:text-white transition-colors">{t.footer.features}</a></li>
            <li><a href="#benefits" class="text-sm text-white/70 hover:text-white transition-colors">{t.nav.benefits}</a></li>
            <li><a href="#faq" class="text-sm text-white/70 hover:text-white transition-colors">{t.nav.faq}</a></li>
          </ul>
        </div>

        <!-- Resources -->
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Resources</h3>
          <ul class="space-y-3">
            <li><a href="https://developer.getraze.co/docs/" target="_blank" class="text-sm text-white/70 hover:text-white transition-colors">{t.nav.documentation}</a></li>
            <li><a href="https://developer.getraze.co/api-reference/" target="_blank" class="text-sm text-white/70 hover:text-white transition-colors">{t.footer.apiDocs}</a></li>
            <li><a href="https://developer.getraze.co/changelog" target="_blank" class="text-sm text-white/70 hover:text-white transition-colors">Changelog</a></li>
            <li><a href="https://getraze.co/partners" class="text-sm text-white/70 hover:text-white transition-colors">Partners</a></li>
            <li><a href="https://app.getraze.co" target="_blank" class="text-sm text-white/70 hover:text-white transition-colors">{t.nav.login}</a></li>
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t.footer.legal}</h3>
          <ul class="space-y-3">
            <li><a href="/terms" class="text-sm text-white/70 hover:text-white transition-colors">{t.footer.terms}</a></li>
            <li><a href="/privacy" class="text-sm text-white/70 hover:text-white transition-colors">{t.footer.privacy}</a></li>
            <li><a href="/cookies" class="text-sm text-white/70 hover:text-white transition-colors">{t.footer.cookies}</a></li>
          </ul>
        </div>
      </div>

      <!-- Bottom -->
      <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-white/60">
          &copy; {new Date().getFullYear()} GetRaze. {t.footer.rights}
        </p>
        <div class="flex items-center gap-6">
          <a href="/terms" class="text-sm text-white/60 hover:text-white transition-colors">Terms</a>
          <a href="/privacy" class="text-sm text-white/60 hover:text-white transition-colors">Privacy</a>
        </div>
      </div>
    </div>
  </div>
</footer>
