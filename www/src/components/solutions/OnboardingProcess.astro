---
interface Step {
  title: string;
  description: string;
}

interface Props {
  badge: string;
  title: string;
  subtitle: string;
  steps: {
    kickoff: Step;
    config: Step;
    testing: Step;
    review: Step;
    adjustments: Step;
    golive: Step;
  };
  variant?: 'support' | 'dealership';
}

const { badge, title, subtitle, steps, variant = 'support' } = Astro.props;

const accentColor = variant === 'support' ? 'primary' : 'emerald';

const stepsList = [
  { key: 'kickoff', icon: 'rocket', ...steps.kickoff },
  { key: 'config', icon: 'cog', ...steps.config },
  { key: 'testing', icon: 'beaker', ...steps.testing },
  { key: 'review', icon: 'eye', ...steps.review },
  { key: 'adjustments', icon: 'adjustments', ...steps.adjustments },
  { key: 'golive', icon: 'sparkles', ...steps.golive },
];
---

<section class="py-20 lg:py-32 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class={`inline-block px-4 py-1.5 rounded-full text-sm font-semibold bg-${accentColor}-100 text-${accentColor}-700 mb-4`}>
        {badge}
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Timeline -->
    <div class="relative">
      <!-- Connection Line -->
      <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-gray-200 via-gray-300 to-gray-200 -translate-x-1/2"></div>

      <div class="space-y-8 lg:space-y-0">
        {stepsList.map((step, index) => (
          <div class={`relative lg:flex ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'}`}>
            <!-- Step Card -->
            <div class={`lg:w-5/12 ${index % 2 === 0 ? 'lg:pr-12 lg:text-right' : 'lg:pl-12 lg:text-left'}`}>
              <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                <div class={`flex items-center gap-3 mb-3 ${index % 2 === 0 ? 'lg:flex-row-reverse' : ''}`}>
                  <div class={`w-10 h-10 rounded-xl bg-${accentColor}-100 flex items-center justify-center`}>
                    {step.icon === 'rocket' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    )}
                    {step.icon === 'cog' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    )}
                    {step.icon === 'beaker' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                      </svg>
                    )}
                    {step.icon === 'eye' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    )}
                    {step.icon === 'adjustments' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                      </svg>
                    )}
                    {step.icon === 'sparkles' && (
                      <svg class={`w-5 h-5 text-${accentColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                      </svg>
                    )}
                  </div>
                  <h3 class="text-lg font-bold text-gray-900">{step.title}</h3>
                </div>
                <p class="text-gray-600 text-sm">{step.description}</p>
              </div>
            </div>

            <!-- Center Circle with Number -->
            <div class="hidden lg:flex lg:w-2/12 justify-center">
              <div class={`w-12 h-12 rounded-full bg-${accentColor}-600 text-white flex items-center justify-center font-bold text-lg shadow-lg z-10`}>
                {index + 1}
              </div>
            </div>

            <!-- Empty space for alternating layout -->
            <div class="hidden lg:block lg:w-5/12"></div>
          </div>
        ))}
      </div>
    </div>

    <!-- Duration Badge -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-white border border-gray-200 shadow-sm">
        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-gray-700 font-medium">5-7</span>
        <span class="text-gray-500">business days</span>
      </div>
    </div>
  </div>
</section>
