---
interface Channel {
  title: string;
  description: string;
}

interface Props {
  badge: string;
  title: string;
  subtitle: string;
  channels: {
    whatsapp: Channel;
    instagram: Channel;
    widget: Channel;
  };
  variant?: 'support' | 'dealership';
}

const { badge, title, subtitle, channels, variant = 'support' } = Astro.props;

const accentColor = variant === 'support' ? 'primary' : 'emerald';

const channelsList = [
  {
    key: 'whatsapp',
    color: 'bg-green-500',
    icon: 'whatsapp',
    ...channels.whatsapp
  },
  {
    key: 'instagram',
    color: 'bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400',
    icon: 'instagram',
    ...channels.instagram
  },
  {
    key: 'widget',
    color: `bg-${accentColor}-600`,
    icon: 'chat',
    ...channels.widget
  }
];
---

<section class="py-20 lg:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class={`inline-block px-4 py-1.5 rounded-full text-sm font-semibold bg-${accentColor}-100 text-${accentColor}-700 mb-4`}>
        {badge}
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Channels Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {channelsList.map((channel) => (
        <div class="group relative bg-white rounded-2xl p-8 border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <!-- Icon -->
          <div class={`w-16 h-16 rounded-2xl ${channel.color} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
