---
interface Props {
  title: string;
  stats: {
    tickets: string;
    resolved: string;
    responseTime: string;
    satisfaction: string;
  };
  recentChats: string;
  topQuestions: string;
}

const { title, stats, recentChats, topQuestions } = Astro.props;
---

<div class="relative">
  <!-- Browser Chrome -->
  <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200/50">
    <!-- Browser Header -->
    <div class="bg-gray-100 px-4 py-3 flex items-center gap-2 border-b border-gray-200">
      <div class="flex gap-1.5">
        <div class="w-3 h-3 rounded-full bg-red-400"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
        <div class="w-3 h-3 rounded-full bg-green-400"></div>
      </div>
      <div class="flex-1 flex justify-center">
        <div class="bg-white rounded-md px-4 py-1 text-sm text-gray-600 border border-gray-200">
          app.getraze.co/support
        </div>
      </div>
    </div>

    <!-- Dashboard Content -->
    <div class="p-6 bg-gray-50">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-bold text-gray-900">{title}</h3>
        <div class="flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          <span class="text-sm text-green-600 font-medium">Live</span>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-4 gap-3 mb-6">
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-gray-900">1,247</div>
          <div class="text-xs text-gray-500">{stats.tickets}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-green-600">98.5%</div>
          <div class="text-xs text-gray-500">{stats.resolved}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-blue-600">&lt;30s</div>
          <div class="text-xs text-gray-500">{stats.responseTime}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-purple-600">4.8/5</div>
          <div class="text-xs text-gray-500">{stats.satisfaction}</div>
        </div>
      </div>

      <!-- Two Columns -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Recent Chats -->
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
          <h4 class="text-sm font-semibold text-gray-700 mb-3">{recentChats}</h4>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                <span class="text-xs font-medium text-blue-600">MA</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 truncate">Maria Silva</div>
                <div class="text-xs text-gray-500 truncate">"Como resetar minha senha?"</div>
              </div>
              <span class="w-2 h-2 rounded-full bg-green-500 flex-shrink-0"></span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center">
                <span class="text-xs font-medium text-purple-600">JO</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 truncate">Joao Santos</div>
                <div class="text-xs text-gray-500 truncate">"Preciso de ajuda com..."</div>
              </div>
              <span class="w-2 h-2 rounded-full bg-yellow-500 flex-shrink-0"></span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
                <span class="text-xs font-medium text-green-600">AN</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900 truncate">Ana Costa</div>
                <div class="text-xs text-gray-500 truncate">"Erro na instalacao do..."</div>
              </div>
              <span class="w-2 h-2 rounded-full bg-green-500 flex-shrink-0"></span>
            </div>
          </div>
        </div>

        <!-- Top Questions -->
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
          <h4 class="text-sm font-semibold text-gray-700 mb-3">{topQuestions}</h4>
          <div class="space-y-2">
            <div class="flex items-center justify-between py-2 border-b border-gray-50">
              <span class="text-sm text-gray-600">1. Reset de senha</span>
              <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">234</span>
            </div>
            <div class="flex items-center justify-between py-2 border-b border-gray-50">
              <span class="text-sm text-gray-600">2. Instalacao</span>
              <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">187</span>
            </div>
            <div class="flex items-center justify-between py-2 border-b border-gray-50">
              <span class="text-sm text-gray-600">3. Integracao API</span>
              <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">156</span>
            </div>
            <div class="flex items-center justify-between py-2">
              <span class="text-sm text-gray-600">4. Configuracoes</span>
              <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">98</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Stats Card -->
  <div class="absolute -bottom-4 -left-4 bg-white rounded-xl p-4 shadow-lg border border-gray-100 animate-float">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div>
        <div class="text-sm font-bold text-gray-900">+340%</div>
        <div class="text-xs text-gray-500">Resolution Rate</div>
      </div>
    </div>
  </div>

  <!-- Floating AI Badge -->
  <div class="absolute -top-4 -right-4 bg-primary-600 text-white rounded-xl px-4 py-2 shadow-lg animate-float" style="animation-delay: 1s;">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      <span class="text-sm font-medium">AI Powered</span>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
</style>
