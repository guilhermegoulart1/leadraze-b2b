---
interface Props {
  title: string;
  stats: {
    leads: string;
    conversion: string;
    avgTicket: string;
    testDrives: string;
  };
  topCars: string;
  hotLeads: string;
}

const { title, stats, topCars, hotLeads } = Astro.props;
---

<div class="relative">
  <!-- Browser Chrome -->
  <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200/50">
    <!-- Browser Header -->
    <div class="bg-gray-100 px-4 py-3 flex items-center gap-2 border-b border-gray-200">
      <div class="flex gap-1.5">
        <div class="w-3 h-3 rounded-full bg-red-400"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
        <div class="w-3 h-3 rounded-full bg-green-400"></div>
      </div>
      <div class="flex-1 flex justify-center">
        <div class="bg-white rounded-md px-4 py-1 text-sm text-gray-600 border border-gray-200">
          app.getraze.co/dealership
        </div>
      </div>
    </div>

    <!-- Dashboard Content -->
    <div class="p-6 bg-gray-50">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-bold text-gray-900">{title}</h3>
        <div class="flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
          <span class="text-sm text-emerald-600 font-medium">Live</span>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-4 gap-3 mb-6">
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-gray-900">847</div>
          <div class="text-xs text-gray-500">{stats.leads}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-emerald-600">32%</div>
          <div class="text-xs text-gray-500">{stats.conversion}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-blue-600">R$85k</div>
          <div class="text-xs text-gray-500">{stats.avgTicket}</div>
        </div>
        <div class="bg-white rounded-xl p-4 text-center shadow-sm border border-gray-100">
          <div class="text-2xl font-bold text-purple-600">124</div>
          <div class="text-xs text-gray-500">{stats.testDrives}</div>
        </div>
      </div>

      <!-- Two Columns -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Top Cars -->
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
          <h4 class="text-sm font-semibold text-gray-700 mb-3">{topCars}</h4>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              </div>
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900">HB20 2024</div>
                <div class="w-full bg-gray-100 rounded-full h-1.5 mt-1">
                  <div class="bg-emerald-500 h-1.5 rounded-full" style="width: 85%"></div>
                </div>
              </div>
              <span class="text-sm font-semibold text-emerald-600">234</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              </div>
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900">Onix Plus</div>
                <div class="w-full bg-gray-100 rounded-full h-1.5 mt-1">
                  <div class="bg-emerald-500 h-1.5 rounded-full" style="width: 72%"></div>
                </div>
              </div>
              <span class="text-sm font-semibold text-emerald-600">198</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
              </div>
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900">T-Cross</div>
                <div class="w-full bg-gray-100 rounded-full h-1.5 mt-1">
                  <div class="bg-emerald-500 h-1.5 rounded-full" style="width: 56%"></div>
                </div>
              </div>
              <span class="text-sm font-semibold text-emerald-600">156</span>
            </div>
          </div>
        </div>

        <!-- Hot Leads -->
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
          <h4 class="text-sm font-semibold text-gray-700 mb-3">{hotLeads}</h4>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-amber-100 flex items-center justify-center">
                <span class="text-xs">&#11088;</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900">Pedro Oliveira</div>
                <div class="text-xs text-gray-500">Onix Plus - R$ 95k</div>
              </div>
              <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-600">Hot</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-amber-100 flex items-center justify-center">
                <span class="text-xs">&#11088;</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900">Lucas Ferreira</div>
                <div class="text-xs text-gray-500">Compass - R$ 180k</div>
              </div>
              <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-600">Warm</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full bg-amber-100 flex items-center justify-center">
                <span class="text-xs">&#11088;</span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-gray-900">Julia Mendes</div>
                <div class="text-xs text-gray-500">HB20 - R$ 78k</div>
              </div>
              <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-600">Hot</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Stats Card -->
  <div class="absolute -bottom-4 -left-4 bg-white rounded-xl p-4 shadow-lg border border-gray-100 animate-float">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
      </div>
      <div>
        <div class="text-sm font-bold text-gray-900">+58%</div>
        <div class="text-xs text-gray-500">Lead Conversion</div>
      </div>
    </div>
  </div>

  <!-- Floating AI Badge -->
  <div class="absolute -top-4 -right-4 bg-emerald-600 text-white rounded-xl px-4 py-2 shadow-lg animate-float" style="animation-delay: 1s;">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
      </svg>
      <span class="text-sm font-medium">Auto Sales</span>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
</style>
