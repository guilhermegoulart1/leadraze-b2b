---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PolicyModal from '../components/PolicyModal.astro';

const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
---

<Layout title="GetRaze Partners | Partner Program" description="Become a GetRaze Partner and earn 10% recurring commission. Perfect for agencies and marketing professionals.">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 overflow-hidden bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900">
      <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-20"></div>
      <div class="absolute top-20 left-10 w-72 h-72 bg-purple-500 rounded-full filter blur-[120px] opacity-30"></div>
      <div class="absolute bottom-10 right-10 w-96 h-96 bg-indigo-500 rounded-full filter blur-[120px] opacity-20"></div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-purple-200 text-sm font-medium mb-8">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Earn 10% Recurring Commission
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white leading-tight mb-6">
            Become a <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-300 to-pink-300">GetRaze Partner</span>
          </h1>

          <p class="text-xl text-purple-200 mb-10 max-w-2xl mx-auto">
            Help your clients grow with the best B2B prospecting platform and earn recurring commissions as long as they remain subscribers.
          </p>

          <a href="#signup" class="inline-flex items-center px-8 py-4 bg-white text-purple-900 rounded-xl font-bold text-lg hover:bg-purple-50 transition-all shadow-2xl shadow-purple-500/30">
            Become a Partner
            <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Start earning commissions in 3 simple steps
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Step 1 -->
          <div class="relative">
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl">1</div>
            <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 h-full">
              <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Sign Up</h3>
              <p class="text-gray-600">
                Fill out the form below with your details. Our team will review and approve your account within 24 hours.
              </p>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="relative">
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl">2</div>
            <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 h-full">
              <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Share Your Link</h3>
              <p class="text-gray-600">
                Once approved, you'll receive a unique referral link. Share it with your clients and prospects.
              </p>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="relative">
            <div class="absolute -top-4 -left-4 w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl">3</div>
            <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 h-full">
              <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Earn Commissions</h3>
              <p class="text-gray-600">
                Receive 10% recurring commission as long as your referrals remain active subscribers.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Exclusive Benefits</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Beyond commissions, you get exclusive partner advantages
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Benefit 1 -->
          <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-2xl p-6 border border-purple-100">
            <div class="w-12 h-12 bg-purple-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">10% Recurring</h3>
            <p class="text-gray-600 text-sm">
              Earn 10% of every monthly payment from your referrals, forever.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
            <div class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Account Access</h3>
            <p class="text-gray-600 text-sm">
              With client permission, access their account to provide support and management.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-100">
            <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Exclusive Dashboard</h3>
            <p class="text-gray-600 text-sm">
              Track clicks, conversions, and earnings in real-time on your dashboard.
            </p>
          </div>

          <!-- Benefit 4 -->
          <div class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-2xl p-6 border border-orange-100">
            <div class="w-12 h-12 bg-orange-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Priority Support</h3>
            <p class="text-gray-600 text-sm">
              Priority support for you and your referred clients.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Registration Form -->
    <section id="signup" class="py-20 bg-gradient-to-br from-gray-900 to-purple-900">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Sign Up as a Partner</h2>
          <p class="text-xl text-purple-200">
            Fill in your details and our team will contact you within 24 hours
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <form id="partner-form" class="space-y-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                placeholder="your@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                placeholder="+1 555 123-4567"
              />
            </div>

            <!-- Type -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Type *
              </label>
              <div class="grid grid-cols-2 gap-4">
                <label class="relative">
                  <input type="radio" name="type" value="individual" class="peer sr-only" required />
                  <div class="p-4 border-2 border-gray-200 rounded-xl cursor-pointer transition-all peer-checked:border-purple-600 peer-checked:bg-purple-50 hover:border-gray-300">
                    <div class="flex items-center space-x-3">
                      <svg class="w-6 h-6 text-gray-400 peer-checked:text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span class="font-medium text-gray-900">Individual</span>
                    </div>
                  </div>
                </label>
                <label class="relative">
                  <input type="radio" name="type" value="company" class="peer sr-only" />
                  <div class="p-4 border-2 border-gray-200 rounded-xl cursor-pointer transition-all peer-checked:border-purple-600 peer-checked:bg-purple-50 hover:border-gray-300">
                    <div class="flex items-center space-x-3">
                      <svg class="w-6 h-6 text-gray-400 peer-checked:text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                      </svg>
                      <span class="font-medium text-gray-900">Company</span>
                    </div>
                  </div>
                </label>
              </div>
            </div>

            <!-- Country -->
            <div>
              <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                Country
              </label>
              <select
                id="country"
                name="country"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
              >
                <option value="">Select...</option>
                <option value="United States">United States</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="Canada">Canada</option>
                <option value="Australia">Australia</option>
                <option value="Germany">Germany</option>
                <option value="France">France</option>
                <option value="Brazil">Brazil</option>
                <option value="Mexico">Mexico</option>
                <option value="Spain">Spain</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- Error Message -->
            <div id="form-error" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

            <!-- Success Message -->
            <div id="form-success" class="hidden p-4 bg-green-50 border border-green-200 rounded-xl text-green-600 text-sm"></div>

            <!-- Submit -->
            <button
              type="submit"
              id="submit-btn"
              class="w-full py-4 bg-purple-600 text-white rounded-xl font-bold text-lg hover:bg-purple-700 transition-all flex items-center justify-center space-x-2"
            >
              <span>Submit Application</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 bg-white">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
        </div>

        <div class="space-y-4">
          <!-- FAQ 1 -->
          <details class="bg-gray-50 rounded-xl p-6 group">
            <summary class="flex items-center justify-between cursor-pointer list-none font-medium text-gray-900">
              <span>How long does it take to approve my application?</span>
              <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">
              Our team reviews applications within 24 business hours. Once approved, you'll receive an email with instructions to access your partner dashboard.
            </p>
          </details>

          <!-- FAQ 2 -->
          <details class="bg-gray-50 rounded-xl p-6 group">
            <summary class="flex items-center justify-between cursor-pointer list-none font-medium text-gray-900">
              <span>Do I need to pay anything to become a partner?</span>
              <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">
              No! The partner program is completely free. You don't need to be a GetRaze customer to participate.
            </p>
          </details>

          <!-- FAQ 3 -->
          <details class="bg-gray-50 rounded-xl p-6 group">
            <summary class="flex items-center justify-between cursor-pointer list-none font-medium text-gray-900">
              <span>How does commission payment work?</span>
              <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">
              Commissions are automatically calculated with each payment from your referrals. Payments are made monthly via bank transfer or PayPal.
            </p>
          </details>

          <!-- FAQ 4 -->
          <details class="bg-gray-50 rounded-xl p-6 group">
            <summary class="flex items-center justify-between cursor-pointer list-none font-medium text-gray-900">
              <span>What happens if my referral cancels?</span>
              <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">
              If a referral cancels their subscription, you stop receiving commissions from that account. However, if they reactivate, commissions resume automatically.
            </p>
          </details>

          <!-- FAQ 5 -->
          <details class="bg-gray-50 rounded-xl p-6 group">
            <summary class="flex items-center justify-between cursor-pointer list-none font-medium text-gray-900">
              <span>Can I access my referrals' accounts?</span>
              <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">
              Yes, but only with client authorization. They can grant or revoke your access at any time in their account settings. This doesn't affect your commissions.
            </p>
          </details>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <PolicyModal />
</Layout>

<script define:vars={{ API_URL }}>
  const form = document.getElementById('partner-form');
  const submitBtn = document.getElementById('submit-btn');
  const errorDiv = document.getElementById('form-error');
  const successDiv = document.getElementById('form-success');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      phone: formData.get('phone') || null,
      type: formData.get('type'),
      country: formData.get('country') || null
    };

    // Validate
    if (!data.name || !data.email || !data.type) {
      errorDiv.textContent = 'Please fill in all required fields.';
      errorDiv.classList.remove('hidden');
      successDiv.classList.add('hidden');
      return;
    }

    // Disable button
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg><span>Submitting...</span>';

    try {
      const response = await fetch(`${API_URL}/api/partners/register`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        successDiv.textContent = 'Application submitted successfully! You will receive an email when your account is approved.';
        successDiv.classList.remove('hidden');
        errorDiv.classList.add('hidden');
        form.reset();
      } else {
        throw new Error(result.message || 'Error submitting application');
      }
    } catch (error) {
      errorDiv.textContent = error.message || 'Error submitting application. Please try again.';
      errorDiv.classList.remove('hidden');
      successDiv.classList.add('hidden');
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<span>Submit Application</span><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>';
    }
  });
</script>
