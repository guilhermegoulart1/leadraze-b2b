    "message": "Could not extract the profile username."
  },
  "instagramAddedToAgent": {
    "message": "@$username$ added to \"$agent$\"",
    "placeholders": {
      "username": { "content": "$1", "example": "johndoe" },
      "agent": { "content": "$2", "example": "IG Agent" }
    }
  },
  "instagramAlreadyInAgent": {
    "message": "This profile is already in this agent."
  },
  "instagramProfileDetail": {
    "message": "$count$ profiles - $status$",
    "placeholders": {
      "count": { "content": "$1", "example": "15" },
      "status": { "content": "$2", "example": "active" }
    }
  }
