# Server
PORT=3001
NODE_ENV=development

# PostgreSQL Database
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your_database_password

# Redis (for Bull queues)
# Get this from Railway Redis service
REDIS_URL=redis://default:password@host:port

# Webhook URL (ngrok or production URL)
WEBHOOK_URL=https://your_domain.com/api/webhooks/unipile

# Unipile API
UNIPILE_DSN=api3.unipile.com:13332
UNIPILE_ACCESS_TOKEN=your_unipile_access_token

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=90d

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your_domain.com/api/auth/google/callback

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# Webhook
WEBHOOK_SECRET=your_webhook_secret

# OpenAI (for AI Agents)
OPENAI_API_KEY=your_openai_api_key

# Outscraper API (for Google Maps scraping)
OUTSCRAPER_API_KEY=your_outscraper_api_key

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_live_or_sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_or_pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (Production) - USD
STRIPE_PRICE_BASE_MONTHLY=price_xxx
STRIPE_PRICE_CHANNEL_EXTRA=price_xxx
STRIPE_PRICE_USER_EXTRA=price_xxx
STRIPE_PRICE_CREDITS_500=price_xxx
STRIPE_PRICE_CREDITS_1000=price_xxx
STRIPE_PRICE_CREDITS_2500=price_xxx
STRIPE_PRICE_CREDITS_5000=price_xxx

# Stripe Trial
STRIPE_TRIAL_DAYS=7
